<main id="Profile">
    <div class="shop-header">
        <div class="shop-introduce">
            <h1 class="shop-title">Profile</h1>

            <div class="shop-breadcrumb">
                <a href="/">Home</a>
                <img src="/img/arrow_right.svg" alt="" />
                <p>Profile</p>
            </div>
        </div>
    </div>

    <div class="profile-content">
        <div class="profile-info">
            <div class="profile-info__avatar">
                <img
                    id="avatar-img"
                    class="avatar"
                    src="{{user.avatar}}"
                    alt="avatar"
                />
                <input
                    type="file"
                    id="avatar-input"
                    name="avatar"
                    accept="image/*"
                />
            </div>
            <div class="profile-info__detail">
                <div class="name">
                    <div class="form-group">
                        <label for="first-name">First Name</label>
                        <input
                            type="text"
                            id="first-name"
                            name="first-name"
                            value="{{user.firstName}}"
                            required
                        />
                    </div>

                    <div class="form-group">
                        <label for="last-name">Last Name</label>
                        <input
                            type="text"
                            id="last-name"
                            name="last-name"
                            value="{{user.lastName}}"
                            required
                        />
                    </div>
                </div>

                <div class="form-group">
                    <label for="street-address">Address</label>
                    <input
                        type="text"
                        id="address"
                        name="address"
                        value="{{user.address}}"
                        required
                    />
                </div>

                <div class="form-group">
                    <label for="city">Town / City</label>
                    <input
                        type="text"
                        id="city"
                        name="city"
                        value="{{user.city}}"
                        required
                    />
                </div>

                <div class="form-group form-phone">
                    <label for="phone">Phone</label>
                    <input
                        type="tel"
                        id="phone"
                        name="phone"
                        value="{{user.phone}}"
                        required
                    />

                    <span class="error phone-error">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <p class="error-text">Please enter a valid phone.</p>
                    </span>
                </div>

                <div class="form-group form-email">
                    <label for="email">Email address</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        value="{{user.email}}"
                        required
                        readonly
                    />

                    <span class="error email-error">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <p class="error-text">Please enter a valid email.</p>
                    </span>
                </div>

                {{#if user.googleId}}
                    <button
                        class="update-btn"
                        id="update-button"
                        type="button"
                    >Update</button>
                {{else}}
                    <button
                        class="update-btn"
                        id="change-password-button"
                        type="button"
                    >Change Password</button>

                    <button
                        class="update-btn"
                        id="update-button"
                        type="button"
                    >Update</button>
                {{/if}}

                <!-- Overlay -->
                <div id="password-overlay" class="overlay hidden">
                    <div class="overlay-content">
                        <h2 class="overlay-head">Change Password</h2>
                        <form id="password-form">
                            <div class="form-group form-current-password">
                                <label for="current-password">Current Password</label>
                                <input
                                    type="password"
                                    id="current-password"
                                    name="current-password"
                                    required
                                />

                                <span class="error current-password-error">
                                    <i
                                        class="fa-solid fa-circle-exclamation"
                                    ></i>
                                    <p class="error-text"></p>
                                </span>
                            </div>
                            <div class="form-group form-new-password">
                                <label for="new-password">New Password</label>
                                <input
                                    type="password"
                                    id="new-password"
                                    name="new-password"
                                    required
                                />

                                <span class="error new-password-error">
                                    <i
                                        class="fa-solid fa-circle-exclamation"
                                    ></i>
                                    <p class="error-text">Please enter at least
                                        8 character with number, symbol, small
                                        and capital letter.</p>
                                </span>
                            </div>
                            <div class="form-group form-confirm-password">
                                <label for="confirm-password">Confirm Password</label>
                                <input
                                    type="password"
                                    id="confirm-password"
                                    name="confirm-password"
                                    required
                                />

                                <span class="error confirm-password-error">
                                    <i
                                        class="fa-solid fa-circle-exclamation"
                                    ></i>
                                    <p class="error-text">Password don't match.</p>
                                </span>
                            </div>
                            <button
                                type="submit"
                                class="change-btn"
                            >Change</button>
                            <button
                                type="button"
                                id="close-overlay"
                                class="cancel-btn"
                            >Cancel</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

</main>

<script src="/scripts/profile.js"></script>